#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main() 
{
    ifstream in("D:\f.txt");
    ofstream out("D:\g.txt");
    string s;
    if (!in) {
        cout << "error";
    }
    while (in.peek() != EOF) { //пока не прочитан маркер конца файла
        getline(in, s); //читаем очередную строку из файла f.txt
        for (unsigned int i = 0; i < s.length(); i++) {
            s[s.length() + 1] = i + 1;
        }
        out << s << endl;
    }
    in.close();
    out.close();
    return 0;
}
