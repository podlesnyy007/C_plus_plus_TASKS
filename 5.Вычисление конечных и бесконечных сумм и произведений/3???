#include <iostream>
#include <cmath>
using namespace std;

int main() 
{
    int i = 1, f = 1; // i-ый член послкдовательности
                      // f - факториал
    float e, s = 0, a = 3;  // e - заданная точность
                            // s - сумма последовательности
                            // a - перый член последовательности: (-3)^2*1/3*1! = 3
    cout << "e = ";
    cin >> e;
    while (a >= e) {
        s += a;
        f *= i;
        a = pow(-3, 2 * i) / 3 * f;
        i++;
    }
    cout << a;
}
